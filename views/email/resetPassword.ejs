<!doctype html>
<head>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/plugins.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/themes.css">

</head>
<body>

<!-- Login Background -->
<div id="login-background">
    <img src="/img/header/widget1_header.jpg" alt="Login Background" class="animation-pulseSlow">
</div>
<!-- END Login Background -->

<!-- Login Container -->
<div id="login-container" class="animation-fadeIn">
    <!-- Login Title -->
    <div class="login-title text-center">
        <h1><i class="gi gi-flash"></i><br><small><strong>Reset Password</strong></small></h1>
    </div>
    <!-- END Login Title -->

    <div class="block push-bit">
        <form action="/api/reset-password" method="post" id="form_login" class="form-horizontal form-bordered form-control-borderless">

            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                        <input type="password" required id="login-email" name="new_password" class="form-control input-lg" placeholder="New Password">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                        <input type="password" required id="login-password" name="confirm_password" class="form-control input-lg" placeholder="Confirm Password">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="input-group">
                     <input type="hidden" name="token" value="<%= token%>">
                    </div>
                </div>
            </div>
            <div class="form-group form-actions">
                <div class="col-xs-8 text-right">
                    <button type="button" onclick="checkForm();" class="btn btn-sm btn-primary"><i class="fa fa-arrow-right"></i>Reset</button>
                </div>
            </div>
        </form>
        <!-- END Login Form -->

    </div>
    <!-- END Login Block -->

    <!-- Footer -->
    <footer class="text-muted text-center">
        <small><span id="year-copy"></span> &copy; <a href="http://goo.gl/TDOSuC" target="_blank"></a></small>
    </footer>
    <!-- END Footer -->
</div>
<!-- END Login Container -->
</body>
<script src="js/pages/login.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"
	    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
		crossorigin="anonymous"></script>
<script>
function checkForm(){
if(form_login.confirm_password.value==form_login.new_password.value){
$('#form_login').submit();
}
else{
    alert('Both passwords should be same');
}
}
</script>
