<!DOCTYPE html>
<html>
<head>
 <%- include ../partials/head %>
</head>
<body>
  <div id="wrapper">
   <%- include ../partials/sidebar %>
   <div id="page-wrapper" class="gray-bg">
    <%- include ../partials/topbar %>
    <div class="row wrapper border-bottom white-bg page-heading">
     <div class="col-lg-10">
      <h2>Admin</h2>
      <ol class="breadcrumb">
       <li>
        <a href="/dashboard">home</a>
      </li>
      <li class="active">
        <strong>Videos</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
 <div class="row">
  <div class="col-lg-12">
   <div class="ibox float-e-margins">
    <div class="ibox-title">
     <h5 style="color:#1F7FAD;">Videos </h5>
   </div>
   <div class="ibox-content">
     <div class="row">
      <a href="/add-video"><button id="export">Add Video</button></a>
    </div>

    <div class="table-responsive">
     <table class="table table-striped">
      <thead>
       <tr>
        <th>Id</th>
        <th>Mood</th>
        <th>Video</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <%  videos.forEach(function(data, index) { %>

     <tr>
      <td><%= data.attributes.id %></td>
      <td><%= fetchMood(data.attributes.mood_id,moods) %></td>
      <td>   
        <img src="https://s3-eu-west-1.amazonaws.com/emotic-mood/Posts/Videos/Thumbs/<%= data.attributes.video_thumb %>" height="50" width="50">                                 
        </td>
        <td>
         <a href="edit-video?video_id=<%= data.attributes.id %>" style="color: black;" title="Edit emoji">
          <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
        </a>
      </td>
      <td>
        <a href="delete-video?video_id=<%= data.attributes.id %>" style="color: black;" title="Delete video">
         <i class="fa fa-trash" aria-hidden="true"></i>
       </a>
     </td>
   </tr>
   <% }); %> 
 </tbody>
 <tfoot>
  <tr>
   <td colspan="12">
    <ul class="pagination pull-right "></ul>
  </td>
</tr>
</tfoot>
</table>

</div>
</div>
</div>
</div>
</div>
</div>

<%- include ../partials/footer %>
</div>
</div>
<%- include ../partials/script %>
</body>
</html>

