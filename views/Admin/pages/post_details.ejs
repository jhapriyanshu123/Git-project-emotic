<section class="description_-min">
<% if(post.attributes.type == 1) { %>
 <img src="https://s3-eu-west-1.amazonaws.com/emotic-mood/Posts/Images/<%= post.attributes.media %>">
<% } else if(post.attributes.type == 2) { %> 
 <video controls>
  <source src="https://s3-eu-west-1.amazonaws.com/emotic-mood/Posts/Videos/<%= post.attributes.media %>" type="video/mp4">
  Your browser does not support the video tag.
 </video>
<% } else if(post.attributes.type == 3) { %>
 <img src="https://s3-eu-west-1.amazonaws.com/emotic-mood/Posts/GIFs/<%= post.attributes.media %>">
<% } else if(post.attributes.type == 4) { %>
 <iframe width="100%" height="500px" src="https://www.youtube.com/embed/<%= post.attributes.youtube_video_id %>">
 </iframe>
<% } %>

</section>
<section class="des-cont-two">
 <div class="container">
  <div class="row">
     <div class="col-xs-12 col-sm-5 col-md-6 col-lg-6 col-xl-6">
      <div class="inner-desc cust-description">
      <h2><%= post.attributes.title %></h2>
        <span><%= post.attributes.description %></span>

      </div>
    </div>
  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 col-xl-5">
